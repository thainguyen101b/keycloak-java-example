{
  "realm": "bank",
  "enabled": true,
  "requiredCredentials": [
    "password"
  ],
  "users": [
    {
      "username": "Bob",
      "firstName": "Bob",
      "lastName": "Smith",
      "email": "bob@example.com",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "bob"
        }
      ],
      "realmRoles": [
        "bank_teller"
      ]
    },
    {
      "username": "alice",
      "firstName": "Alice",
      "lastName": "Smith",
      "email": "alice@example.com",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "alice"
        }
      ],
      "realmRoles": [
        "account_owner"
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "bank_teller",
        "description": "Bank teller privileges"
      },
      {
        "name": "account_owner",
        "description": "Account owner privileges"
      }
    ]
  },
  "clients": [
    {
      "clientId": "bank-client",
      "enabled": true,
      "baseUrl": "http://localhost:8080",
      "adminUrl": "http://localhost:8080",
      "bearerOnly": false,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*"
      ],
      "secret": "secret",
      "authorizationServicesEnabled": true,
      "directAccessGrantsEnabled": true,
      "authorizationSettings": {
        "resources": [
          {
            "name": "Account Resource",
            "uri": "/accounts/*",
            "scopes": [
              {
                "name": "account:view"
              },
              {
                "name": "account:edit"
              }
            ]
          },
          {
            "name": "Transfer Resource",
            "uri": "/transfer",
            "scopes": [
              {
                "name": "transfer:execute"
              },
              {
                "name": "transfer:view"
              }
            ]
          },
          {
            "name": "Customer Profile Resource",
            "uri": "/profile/{id}",
            "scopes": [
              {
                "name": "profile:view"
              },
              {
                "name": "profile:edit"
              }
            ]
          }
        ],
        "policies": [
          {
            "name": "Only Bank Teller and Account Owner Policy",
            "type": "role",
            "logic": "POSITIVE",
            "config": {
              "roles": "[{\"id\": \"bank_teller\"}, {\"id\": \"account_owner\"}]"
            }
          },
          {
            "name": "Only Account Owner Policy",
            "type": "role",
            "logic": "POSITIVE",
            "config": {
              "roles": "[{\"id\": \"account_owner\"}]"
            }
          },
          {
            "name": "Only Bank Teller Policy",
            "type": "role",
            "logic": "POSITIVE",
            "config": {
              "roles": "[{\"id\": \"bank_teller\"}]"
            }
          },
          {
            "name": "View Account Resource Permission",
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "resources": "[\"Account Resource\"]",
              "applyPolicies": "[\"Only Bank Teller and Account Owner Policy\"]"
            }
          },
          {
            "name": "View Account Scope Permission",
            "type": "scope",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "scopes": "[\"account:view\"]",
              "applyPolicies": "[\"Only Bank Teller and Account Owner Policy\"]"
            }
          },
          {
            "name": "Edit Account Scope Permission",
            "type": "scope",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "scopes": "[\"account:edit\"]",
              "applyPolicies": "[\"Only Account Owner Policy\"]"
            }
          },
          {
            "name": "Transfer Resource Permission",
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "resources": "[\"Transfer Resource\"]",
              "applyPolicies": "[\"Only Bank Teller and Account Owner Policy\"]"
            }
          },
          {
            "name": "Transfer Execute Scope Permission",
            "type": "scope",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "scopes": "[\"transfer:execute\"]",
              "applyPolicies": "[\"Only Account Owner Policy\"]"
            }
          },
          {
            "name": "Transfer View Scope Permission",
            "type": "scope",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "scopes": "[\"transfer:view\"]",
              "applyPolicies": "[\"Only Bank Teller and Account Owner Policy\"]"
            }
          },
          {
            "name": "Profile Resource Permission",
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "resources": "[\"Customer Profile Resource\"]",
              "applyPolicies": "[\"Only Bank Teller and Account Owner Policy\"]"
            }
          },
          {
            "name": "Profile View Scope Permission",
            "type": "scope",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "scopes": "[\"profile:view\"]",
              "applyPolicies": "[\"Only Bank Teller and Account Owner Policy\"]"
            }
          },
          {
            "name": "Profile Edit Scope Permission",
            "type": "scope",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "scopes": "[\"profile:edit\"]",
              "applyPolicies": "[\"Only Account Owner Policy\"]"
            }
          }
        ],
        "scopes": [
          {
            "name": "account:view"
          },
          {
            "name": "account:edit"
          },
          {
            "name": "transfer:execute"
          },
          {
            "name": "transfer:view"
          },
          {
            "name": "profile:view"
          },
          {
            "name": "profile:edit"
          }
        ]
      }
    }
  ]
}